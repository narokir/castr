<div class="container-fluid bg-light py-5">
  <div class="row justify-content-center">
    <div class="mx-auto text-center" style="width: 200px;">
      <%= image_tag(@member.profile_image.variant(resize_to_limit: [200,200]),class:"img-fluid border rounded-circle") if @member.profile_image.attached? %>
      <h4 class="mt-4"><%= @member.first_name %></h4>
      <p class="mb-2 text-muted small"><%= @member.email %></p>
        <% if signed_in? && @member == current_member %>
          <ul class="list-group  bg-light">
            <li class="list-group-item bg-light">
              <%= link_to("Edit Prfile", edit_member_registration_path) %>
            </li>
            <li class="list-group-item bg-light">
              <%= link_to("Change Password", edit_password_members_path) %>
            </li>
          </ul>
        <% end %>
    </div>
  </div>
</div>


<div class="container mt-5">
  <div class="row justify-content-center">    
    <div class="col-lg-6">
      <div class="">
        <% if @member.jobs.any? %>
          <div class=" mb-3 rounded clearfix bg-light p-2">
          <% if @member == current_member %>
          <h5 class="p-2 m-0 float-left">Your Casting Calls</h5>
          <% else %>
          <h5 class="p-2 m-0 float-left"><%= @member.first_name %>'s Casting Calls</h5>
          <% end %> 
          </div>
          <%= render "member_jobs" %>
        <% else %>
          <div class="text-center d-flex justify-content-center flex-column align-items-center h-100">
          <p>You have not posted any casting calls yet</p>
          <%= link_to "Create New Casting Call", new_job_path, class:"btn btn-action float-right" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>


