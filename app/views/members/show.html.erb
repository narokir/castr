<%= render "layouts/profile_header" %>

<div class="container mt-5">
  <div class="row justify-content-center">    
    <div class="col-lg-6">
      <div class="">
        <% if @member.jobs.any? %>
          <div class=" mb-3 rounded clearfix bg-light p-2">
          <% if @member == current_member %>
          <h5 class="p-2 m-0 float-left">Your Casting Calls</h5>
          <% else %>
          <h5 class="p-2 m-0 float-left"><%= @member.first_name %>'s Casting Calls</h5>
          <% end %> 
          </div>
          <%= render "member_jobs" %>
        <% else %>
          <div class="text-center d-flex justify-content-center flex-column align-items-center h-100">
          <p>You have not posted any casting calls yet</p>
          <%= link_to "Create New Casting Call", new_job_path, class:"btn btn-action float-right" %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>


