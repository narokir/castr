<%= render "layouts/profile_header" %>
<div class="container mt-5" style="max-width: 600px;">
  <div class="row justify-content-center">
    <div class="col">
      <div class="bg-light shadow-sm rounded p-3">
        <h4>Edit Profile</h4>
        <%= form_for(@member, as: :member) do |f| %>
          <%= render "devise/shared/error_messages", resource: @member %>
          <div class="form-group input-group-lg">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "Name", class: 'form-control' %>
          </div>
          <div class="form-group input-group-lg">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autofocus: true, autocomplete: "Lastname", class: 'form-control'  %>
          </div>
          <div class="form-group input-group-lg">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'  %>
          </div>
          <%# if devise_mapping.confirmable? && @member.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%# @member.unconfirmed_email %></div>
          <%# end %>
          <div class="form-group input-group-lg">
            <div class="actions">
              <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
            </div>
          </div>
        <% end %>
        <hr/>
        <h5>Delete my account</h5>
        <p>Once deleted, your account is gone forever.<%= button_to "Delete your account", registration_path(@member), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>
      </div>
    </div>
  </div>
</div>
