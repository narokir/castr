<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col bg-light shadow-sm rounded p-3" style="max-width: 600px;">
    <p class="align-text-top py-4 mb-0"><%= icon("chevron-left", class: "text-info align-middle") %><%= link_to 'Back', :back %></p>
    <h1>Change Password</h1>
      <%= form_for(@member, :url => { :action => "update_password" } ) do |f| %>
      <%= render "devise/shared/error_messages", resource: @member %>
        <div class="form-group input-group-lg">
          <%= f.label :password %>
            <span class="small text-warning">
            <% if @minimum_password_length %>
            ( <%= @minimum_password_length %> characters minimum )
            <% end %></span>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'  %>
          <small id="emailHelp" class="form-text text-muted"> 6 characters minimum</small>
        </div>

        <div class="form-group input-group-lg">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'  %>
        </div>
        <div class="form-group input-group-lg">
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>