<div class="form-group">
  <%= form_with(url: search_path, class: "form-inline", local: true, method: :get) do |f| %>
  <%= f.text_field :search, class: ' form-control form-control-lg mr-sm-2', placeholder: 'Enter search term...' %>
  <%= f.submit "Find Jobs", disable_with: 'Searching...', class:"btn btn-lg btn-outline-success my-2 my-sm-0" %>
  <% end %>
</div>