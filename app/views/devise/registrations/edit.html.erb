<div class="container-fluid bg-dark">
  <div class="row py-4">
  <div class="col-md-4 col-lg-3 border-right border-secondary">
  <%= image_tag current_member.profile_image, class:'img-fluid' %>
  <%# image_tag current_member.profile_image.variant(resize_to_limit: [150, 150]) %>
  </div>
    <div class="col-md-6 col-lg-3">

      <h2>Public Profile <%# resource_name.to_s.humanize %></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "Name", class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Lastname", class: 'form-control'  %>
        </div>
      
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'  %>
        </div>

        <div class="form-group">
        <p>Role</p>
          <div class="form-check">
            <%= f.check_box :admin, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :admin, class: 'form-check-label' %>
          </div>
  
          <div class="form-check">
            <%= f.check_box :castr, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :castr, class: 'form-check-label' %>
          </div>
  
          <div class="form-check">
            <%= f.check_box :talent, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :talent, class: 'form-check-label' %>
          </div>
        </div>

        <div class="form-group">
        	<div class="custom-file">
            <%= f.label :profile_image, class:"custom-file-label" %>
            	<%= f.file_field :profile_image, class:"custom-file-input" %>
          </div>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :password %> 
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'  %>
          <small id="emailHelp" class="form-text text-muted">leave blank if you don't want to change it.
          <% if @minimum_password_length %>
            <br />
            <%= @minimum_password_length %> characters minimum</small>
          <% end %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'  %>
        </div>
      
      <% if current_member.provider.nil?%>
        <div class="form-group">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control'  %>
        </div>
      <% end %>
      
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <hr/>
      <h5>Delete my account</h5>
      
      <p>Once deleted, your account is gone forever.<%= button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>
      
      <%# link_to "Back", :back %>
    </div>
  </div>
</div>
