<div class="container-fluid bg-dark">
  <div class="row py-4">
  <div class="col-md-4 col-lg-3 border-right border-secondary">
  <%= image_tag(current_member.profile_image, class:'img-fluid') if current_member.profile_image.attached? %>
  <%# image_tag current_member.profile_image.variant(resize_to_limit: [150, 150]) %>
  </div>
    <div class="col-md-6 col-lg-3">

      <h2>Public Profile <%# resource_name.to_s.humanize %></h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),local: true, multipart: true, html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "Name", class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Lastname", class: 'form-control'  %>
        </div>
      
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'  %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image %>
          <div class="dropzone dropzone-default dz-clickable " data-controller="dropzone" data-dropzone-max-file-size="1" data-dropzone-max-files="2">
            <%= f.file_field :profile_image, direct_upload: true, data: { target: 'dropzone.input' } %>
          <div class="dropzone-msg dz-message needsclick ">
            <p class="dropzone-msg-title">Drag image here to start upload or tap to browse</p>
            <span class="dropzone-msg-desc small text-muted">2 MB file size maximum. Allowed file types png, jpg.</span>
          </div>
          </div>
        </div>
      
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      
        <div class="form-group">
          <%= f.label :password %>
      	    <span class="small text-warning">
      	    <% if @minimum_password_length %>
      	    ( <%= @minimum_password_length %> characters minimum )
      	    <% end %></span>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control'  %>
          <small id="emailHelp" class="form-text text-muted">leave blank if you don't want to change it.</small>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control'  %>
        </div>
      
      
      <%# if current_member.provider.nil?%>
        <div class="form-group">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control'  %>
          <small id="emailHelp" class="form-text text-muted">we need your current password to confirm your changes</small>
        </div>
      <%# end %>

        <div class="form-group">
        <p>Role</p>
          <div class="form-check form-check-inline">
            <%= f.check_box :admin, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :admin, class: 'form-check-label' %>
          </div>
  
          <div class="form-check form-check-inline">
            <%= f.check_box :castr, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :castr, class: 'form-check-label' %>
          </div>
  
          <div class="form-check form-check-inline">
            <%= f.check_box :talent, class: 'form-check-input', type: 'checkbox', value: '' %>
            <%= f.label :talent, class: 'form-check-label' %>
          </div>
        </div>
      
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <hr/>
      <h5>Delete my account</h5>
      
      <p>Once deleted, your account is gone forever.<%= button_to "Delete your account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>
      
      <%# link_to "Back", :back %>
    </div>
  </div>
</div>
