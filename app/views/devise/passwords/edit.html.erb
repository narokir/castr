<div class="container-fluid">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-sm-9 col-md-8 col-lg-4">
      <div class="bg-light shadow-sm rounded p-4">
      <h2>Change your password</h2>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>
      
        <div class="form-group">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <span class="small text-warning">( <%= @minimum_password_length %> characters minimum )</span>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:'form-control' %>
        </div>
      
        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
        </div>
      
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Change my password", class:'btn btn-primary btn-block' %>
          </div>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
