<div class="container-fluid">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-sm-9 col-md-8 col-lg-4">
      <div class="bg-light shadow-sm rounded p-4">
  <h4>Reset Password</h4>
  <hr>
      
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-control-lg' %>
        </div>
      
        <div class="form-group ">
          <div class="actions">
            <%= f.submit "Send me reset instructions", class: "btn btn-primary btn-block btn-lg" %>
          </div>
        </div>
      <% end %>
      
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
